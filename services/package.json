{
  "name": "truthbounty-indexers",
  "version": "1.0.0",
  "description": "Blockchain indexers for TruthBounty prediction platforms",
  "main": "index.ts",
  "scripts": {
    "index:pancakeswap": "tsx indexer/pancakeswap-indexer.ts",
    "index:pancakeswap:testnet": "cross-env NETWORK=testnet tsx indexer/pancakeswap-indexer.ts",
    "index:pancakeswap:mainnet": "cross-env NETWORK=mainnet tsx indexer/pancakeswap-indexer.ts",
    "index:polymarket": "tsx indexer/polymarket-indexer.ts",
    "index:all": "concurrently \"npm:index:pancakeswap:mainnet\" \"npm:index:polymarket\"",
    "dev": "npm run index:pancakeswap:testnet",
    "populate-sample-data": "tsx scripts/populate-sample-data.ts",
    "populate-multiplatform": "tsx scripts/populate-multiplatform-data.ts",
    "watch:bets": "tsx bet-watcher.ts",
    "watch:bets:polling": "tsx bet-watcher-polling.ts",
    "start:all": "concurrently \"npm:index:pancakeswap:mainnet\" \"npm:index:polymarket\" \"npm:watch:bets:polling\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.13.2",
    "dotenv": "^16.3.1",
    "viem": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
