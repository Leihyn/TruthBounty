{
  "name": "truthbounty-mvp",
  "version": "1.0.0",
  "description": "TruthBounty - On-Chain Reputation for Prediction Markets",
  "scripts": {
    "index-users": "tsx script/indexer/IndexRealUsers.ts",
    "index-multiplatform": "tsx script/indexer/MultiPlatformIndexer.ts",
    "test": "forge test",
    "deploy:testnet": "forge script script/Deploy.s.sol:Deploy --rpc-url bscTestnet --broadcast",
    "deploy:mainnet": "forge script script/Deploy.s.sol:Deploy --rpc-url bsc --broadcast",
