    "check:mode": "node scripts/check-mode.js",
    "dev": "cd frontend && npm run dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
