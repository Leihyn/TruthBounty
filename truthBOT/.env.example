# ===========================================
# TruthBOT Environment Configuration
# ===========================================
# Copy this to .env and fill in your values

# ===========================================
# Database (Supabase)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
# Note: Use service key (not anon key) for full access

# ===========================================
# Blockchain RPC Endpoints
# ===========================================
# BSC Mainnet (for reading real bets)
BSC_MAINNET_RPC=https://bsc-dataseed1.binance.org
BSC_MAINNET_WS=wss://bsc.publicnode.com

# BSC Testnet (for testing)
BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545

# Polygon (for Polymarket)
POLYGON_RPC=https://polygon-rpc.com
POLYGON_WS=wss://polygon.publicnode.com

# ===========================================
# Contract Addresses
# ===========================================
# PancakeSwap Prediction (Mainnet)
PANCAKE_PREDICTION_ADDRESS=0x18B2A687610328590Bc8F2e5fEdDe3b582A49cdA

# TruthBounty Copy Trading Vault (Testnet)
COPY_TRADING_VAULT=0x...

# ===========================================
# Execution Configuration
# ===========================================
# WARNING: Only set if you want to execute real trades
# This private key will be used to execute copy trades
# EXECUTOR_PRIVATE_KEY=your-private-key-here

# Maximum gas price in gwei (skip execution if higher)
MAX_GAS_PRICE_GWEI=10

# Minimum copy amount in BNB
MIN_COPY_AMOUNT_BNB=0.001

# ===========================================
# API Server
# ===========================================
API_PORT=3001
API_HOST=0.0.0.0

# API authentication secret (generate with: openssl rand -hex 32)
API_SECRET=your-api-secret-here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# ===========================================
# Feature Flags
# ===========================================
ENABLE_SMART_MONEY=true
ENABLE_BACKTESTING=true
ENABLE_ANTI_GAMING=true
ENABLE_PORTFOLIO_OPTIMIZER=true
ENABLE_COPY_EXECUTION=false

# ===========================================
# Bot Configuration
# ===========================================
# Smart Money Aggregator
SIGNAL_MIN_TRADERS=3
SIGNAL_MIN_VOLUME_BNB=1

# Anti-Gaming Detector
GAMING_CHECK_INTERVAL_MS=60000
WASH_TRADING_THRESHOLD=3

# Backtesting
BACKTEST_CACHE_TTL_HOURS=24
BACKTEST_MAX_HISTORY_DAYS=365

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=pretty

# ===========================================
# External APIs
# ===========================================
# Polymarket
POLYMARKET_API_URL=https://gamma-api.polymarket.com

# CoinGecko (for price data)
COINGECKO_API_KEY=

# ===========================================
# Alerts & Notifications
# ===========================================
# Telegram (for alerts)
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_CHAT_ID=

# Discord Webhook (for alerts)
DISCORD_WEBHOOK_URL=

# ===========================================
# Performance Tuning
# ===========================================
# Event polling interval (ms)
POLL_INTERVAL_MS=5000

# WebSocket reconnect delay (ms)
WS_RECONNECT_DELAY_MS=5000

# Database connection pool size
DB_POOL_SIZE=10
