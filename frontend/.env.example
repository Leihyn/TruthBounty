# ===========================================
# TruthBounty Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# For Vercel: Add these in Project Settings > Environment Variables
# ===========================================

# WalletConnect Project ID (REQUIRED)
# Get yours at: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# ===========================================
# BSC Testnet Contract Addresses (Chain ID: 97)
# These are the deployed contracts - copy these exactly
# ===========================================
NEXT_PUBLIC_CORE_ADDRESS_TESTNET=0xd140eb173cbe6abf12a304095fa529d9b3f8ce6b
NEXT_PUBLIC_NFT_ADDRESS_TESTNET=0xa216b13c0b27b00c23552c768088fe11004d4b37
NEXT_PUBLIC_CALCULATOR_ADDRESS_TESTNET=0x1c5aa7eff8174e8fd3a5643d75af77f3f5f422b9
NEXT_PUBLIC_REGISTRY_ADDRESS_TESTNET=0xbf378b0e69cf131bcc0b103ae8b32b5db03ddaa5

# ===========================================
# BSC Mainnet Contract Addresses (Optional)
# Deploy to mainnet and add addresses here
# ===========================================
NEXT_PUBLIC_CORE_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_NFT_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_CALCULATOR_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_REGISTRY_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000

# ===========================================
# Supabase (for leaderboard data)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===========================================
# Copy Trading Vault (Optional)
# ===========================================
NEXT_PUBLIC_COPY_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
